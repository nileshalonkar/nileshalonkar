<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="@android:color/transparent"
    android:layout_height="fill_parent"
    tools:context=".Activities.SignUpActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_bg"
        android:alpha="0.3"/>

    <RelativeLayout
        android:id="@+id/llK3family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/SpinnerState"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:dropDownVerticalOffset="80dp"
            android:gravity="end"
            android:paddingStart="10dp" />

        <Spinner
            android:id="@+id/SpinnerDistrict"
            android:layout_below="@+id/SpinnerState"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:dropDownVerticalOffset="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="end"
            android:paddingStart="10dp" />

        <Spinner
            android:id="@+id/SpinnerCategory"
            android:layout_below="@+id/SpinnerDistrict"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg"
            android:layout_marginTop="10dp"
            android:dropDownVerticalOffset="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="end"
            android:paddingStart="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/llK3family"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

     <!--   <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text=""
            android:drawableLeft="@drawable/search"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:hint="Search here.."
            android:textColorHint="@color/silver"/>
-->

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/mssionk3family_recycler"/>

    </LinearLayout>
</RelativeLayout>